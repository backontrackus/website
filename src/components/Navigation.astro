---
const pages = [
  "Home",
  "Volunteer",
  "Team",
  "PVSA",
  "Apply",
  "Calendar",
  "Shop",
  "Contact",
  "About",
];
---

<nav
  class="sticky left-0 top-0 flex w-full flex-wrap items-center justify-center gap-3 bg-bot-blue p-3 md:p-0 md:py-5"
>
  <a
    class="hover:text-orange p-1 text-lg font-bold text-white md:mx-5 md:p-0 md:text-xl"
    href="/"
  >
    Back on Track America
  </a>
  <button
    class="ml-auto text-lg font-bold text-white focus:outline-none md:hidden"
    onclick="document.getElementById('menu').classList.toggle('hidden'); document.getElementById('menu').classList.toggle('flex');"
  >
    &#9776;
  </button>
  <div class="mx-5 hidden h-10 w-px bg-white md:block"></div>
  <div
    id="menu"
    class="hidden w-full flex-col items-center justify-evenly md:flex md:w-auto md:flex-row"
  >
    {
      pages.map((p) => (
        <a
          class="mx-5 text-center text-white hover:text-bot-orange"
          href={`/${p === "Home" ? "" : p.toLowerCase()}`}
        >
          {p}
        </a>
      ))
    }
  </div>
</nav>
