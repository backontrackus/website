---
import BackOnTrackLayout from "../layouts/BackOnTrackLayout.astro";
---

<BackOnTrackLayout title="Contact">
  <div
    class="h-full flex-grow bg-black/[.6] bg-[url('/moving-boxes.jpg')] bg-cover bg-fixed bg-center bg-no-repeat bg-blend-overlay"
  >
    <div class="flex flex-col items-center px-4 py-10">
      <h1 class="text-center text-3xl font-bold text-white md:text-4xl mb-2">
        Contact Us
      </h1>
      <h2 class="text-center text-xl text-white md:text-2xl mb-8">
        We'd love to hear from you!
      </h2>
      
      <div class="w-full max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="order-1">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-center text-lg font-semibold text-gray-700 mb-6">Send us a Message</h3>
            <form id="contactForm" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your full name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your email address"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
              Phone <span class="text-red-500">*</span>
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your phone number"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
              Subject <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter the subject"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
              Message <span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200 resize-vertical"
              placeholder="Enter your message..."
            ></textarea>
          </div>

          <div class="flex justify-center pt-4">
            <button
              type="submit"
              class="bg-bot-blue text-white font-bold py-3 px-8 rounded-lg transition duration-200 transform hover:scale-105 focus:ring-4 focus:ring-blue-300 focus:outline-none"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <div class="order-2">
      <div class="bg-white rounded-lg shadow-lg p-8 h-full flex flex-col">
        <h3 class="text-center text-lg font-semibold text-gray-700 mb-6">Organization Information</h3>
        
        <!-- Address Section -->
        <div class="mb-6">
          <h4 class="text-sm font-semibold text-gray-700 mb-2 flex items-center">
            <svg class="w-4 h-4 mr-2 text-bot-blue" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            Mailing Address
          </h4>
          <p class="text-gray-600 text-sm leading-relaxed">
            18812 Birchwood Groves Dr<br>
            Lutz, FL 33558-8351
          </p>
        </div>

        <!-- EIN Section -->
        <div class="mb-6">
          <h4 class="text-sm font-semibold text-gray-700 mb-2 flex items-center">
            <svg class="w-4 h-4 mr-2 text-bot-blue" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0v12h8V4H6z" clip-rule="evenodd"></path>
            </svg>
            Tax ID Number
          </h4>
          <p class="text-gray-600 text-sm">
            EIN: 88-1455899
          </p>
        </div>

        <!-- Leadership Email Section -->
        <div class="mb-6">
          <h4 class="text-sm font-semibold text-gray-700 mb-2 flex items-center">
            <svg class="w-4 h-4 mr-2 text-bot-blue" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            Leadership Contact
          </h4>
          <a href="mailto:leadership@backontrackus.org" class="text-bot-blue hover:text-blue-800 text-sm transition duration-200">
            leadership@backontrackus.org
          </a>
        </div>

        <!-- Google Map -->
        <div class="flex-1 flex flex-col">
          <h4 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
            <svg class="w-4 h-4 mr-2 text-bot-blue" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z" clip-rule="evenodd"></path>
            </svg>
            Our Location
          </h4>
          <div class="rounded-lg overflow-hidden shadow-sm flex-1 min-h-0">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d28150.4!2d-82.4232!3d28.1567!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f8.5!3m3!1m2!1s0x88c2c0a0a0a0a0a0%3A0x0!2s18812%20Birchwood%20Groves%20Dr%2C%20Lutz%2C%20FL%2033558!5e0!3m2!1sen!2sus!4v1640000000000!5m2!1sen!2sus"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="rounded-lg"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
    </div>
  </div>

  <script src="/js/contact-form.js" is:inline></script>
</BackOnTrackLayout>
