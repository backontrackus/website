---
import BackOnTrackLayout from "../layouts/BackOnTrackLayout.astro";
---

<BackOnTrackLayout title="Apply">
  <div
    class="h-full flex-grow bg-black/[.6] bg-[url('/nameless-portrait.jpg')] bg-cover bg-fixed bg-right bg-no-repeat bg-blend-overlay"
  >
    <div class="flex flex-col items-center px-4 py-10">
      <h1 class="text-center text-3xl font-bold text-white md:text-4xl mb-2">
        Join Our Team
      </h1>
      <h2 class="text-center text-xl text-white md:text-2xl mb-8">
        Apply here to start a new chapter!
      </h2>
      
      <div class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-8">
        <form id="applicationForm" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your full name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your email address"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
              Phone <span class="text-red-500">*</span>
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your phone number"
            />
          </div>

          <div>
            <label for="location" class="block text-sm font-semibold text-gray-700 mb-2">
              Where are you located? <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="location"
              name="location"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200"
              placeholder="Enter your city and state"
            />
          </div>

          <div>
            <label for="teamAddition" class="block text-sm font-semibold text-gray-700 mb-2">
              What makes you a good addition to our team? <span class="text-red-500">*</span>
            </label>
            <textarea
              id="teamAddition"
              name="teamAddition"
              required
              rows="4"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200 resize-vertical"
              placeholder="Tell us about your skills, experience, and passion for helping others..."
            ></textarea>
          </div>

          <div>
            <label for="comments" class="block text-sm font-semibold text-gray-700 mb-2">
              Other thoughts or comments
            </label>
            <textarea
              id="comments"
              name="comments"
              rows="3"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bot-blue focus:border-bot-blue transition duration-200 resize-vertical"
              placeholder="Any additional information you'd like to share..."
            ></textarea>
          </div>

          <div class="flex justify-center pt-4">
            <button
              type="submit"
              
              class="bg-bot-blue text-white font-bold py-3 px-8 rounded-lg transition duration-200 transform hover:scale-105 focus:ring-4 focus:ring-blue-300 focus:outline-none"
            >
              Submit Application
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="/js/chapter-form.js" is:inline></script>
</BackOnTrackLayout>
